{
  "name": "fire-dept",
  "version": "1.0.0",
  "description": "Fire department emergency response dashboard",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nl-hugo/fire-dept.git"
  },
  "keywords": [
    "fire",
    "department",
    "emergency",
    "response",
    "dashboard"
  ],
  "author": "Hugo Janssen <info@hugojanssen.nl> (http://www.hugojanssen.nl)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nl-hugo/fire-dept/issues"
  },
  "homepage": "https://github.com/nl-hugo/fire-dept#readme",
  "engines": {
    "node": "10.7.0",
    "npm": "6.2.0"
  },
  "scripts": {
    "build:development": "webpack --config ./config/webpack.config.js --env=development --progress --profile --colors",
    "build:production": "webpack --config ./config/webpack-production.config.js --env=production --progress --profile --colors",
    "lint": "eslint ./{server,app,config}/**/*{config,''}.js",
    "postinstall": "npm run build:production",
    "start": "node server",
    "clean": "rimraf shapes",
    "download": "download --extract --out shapes https://www.cbs.nl/-/media/_pdf/2017/36/buurt_2017.zip",
    "shape": "ogr2ogr -f GeoJSON -t_srs EPSG:4326 -where WATER='NEE' shapes/gem_2017.json shapes/gem_2017.shp",
    "topojson": "topojson --id-property GM_CODE -p name=GM_NAAM -s 3e-9 -o app/src/data/gem.json -- shapes/gem_2017.json",
    "map": "npm run download && npm run shape && npm run topojson && npm run clean"
  },
  "dependencies": {
    "css-loader": "1.0.0",
    "express": "4.16.3",
    "html-webpack-plugin": "3.2.0",
    "node-sass": "4.9.2",
    "sass-loader": "7.1.0",
    "style-loader": "0.21.0",
    "webpack": "4.16.5",
    "webpack-dev-middleware": "3.1.3",
    "webpack-hot-middleware": "2.22.3"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-eslint": "8.2.6",
    "babel-preset-env": "1.7.0",
    "download-cli": "1.1.1",
    "eslint": "5.3.0",
    "eslint-config-airbnb": "17.0.0",
    "eslint-config-airbnb-base": "13.0.0",
    "eslint-plugin-babel": "5.1.0",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-react": "7.10.0",
    "ogr2ogr": "1.2.1",
    "rimraf": "2.6.2",
    "topojson": "~1.6",
    "webpack-cli": "3.1.0"
  }
}
