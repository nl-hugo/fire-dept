{
  "bootstrapVersion": 4,

  "useFlexbox": true,

  "extractStyles": false,

  "styleLoaders": [
    "style-loader",
    "css-loader",
    "postcss-loader",
    "sass-loader"
  ],

  scripts: {
    "alert": true,
    "button": true,
    "carousel": true,
    "collapse": true,
    "dropdown": false,
    "modal": true,
    "popover": false,
    "scrollspy": true,
    "tab": true,
    "tooltip": false,
    "util": true
  },

  styles: {
    // Mixins
    mixins: true,

    // Reset and dependencies
    // normalize: true,
    print: true,

    // Core CSS
    reboot: true,
    type: true,
    images: true,
    code: true,
    grid: true,
    tables: true,
    forms: true,
    buttons: true,

    // Components
    badge: true,
    dropdown: false,
    "button-group": true,
    "input-group": true,
    "custom-forms": true,
    nav: true,
    navbar: true,
    card: true,
    breadcrumb: true,
    pagination: true,
    jumbotron: true,
    alert: true,
    progress: true,
    media: true,
    "list-group": true,
    "responsive-embed": false,
    close: true,

    // Components w/ JavaScript
    modal: true,
    tooltip: false,
    popover: false,
    carousel: true,

    // Utility classes
    transitions: true,
    utilities: true
  }
}